


<div class="container-fluid p-0">
  <div class="row">
  	<div class= "col-md-12 p-0">
  		<div class ="overlay">
  		</div>

		<div class= "indexBanner">
			<p class= "indexSlogan">looking for your next hair cut?</p>
			<p class ="indexSloganTag">We are your one stop solution for all your hair needs</p>
		</div>

		</div>
	</div>
</div>

<div class ="row" id="shiftRow">
	<div class="col-md-6 offset-md-3 w-100" id="alignSearch">
		<div class="container-fluid">
  		<div class="row">
  			<div class= "col-sm-8 p-0" id="heightAdjustment">
  				<form>
  					<div class="form-group">
      				<input type="search" class="form-control" id="input1" placeholder="Search for services or salon">
    				</div>
  				</form>

  			</div>
  			<div class= "col-sm-4 p-0">
  				<form>
  					<button type="submit" class="btn btn-danger" id="submit_btn">Search</button>
  				</form>
  			</div>
  		</div>
  	</div>
	</div>
</div>
<div class= "discover">
	<p>Discover new salons</p>
</div>

<% if defined? @salons.first.detail != nil %>

<div class="container w-100" id="cardWrapper">
  <div class="row">
  	<% @salons.each do |salon| %>
  	<div class="col-lg-4 col-sm-6" id="indexCardMargin">
  		<a href ="/salons/<%=salon.id%>/appointments" class="aTag">
  			<div class="card" id="indexCard">
  				<div class ="cardImage">
  					<img src= "<%=salon.detail.logo_url%>" class="card-img-top cardImage" alt="...">
  				</div>
  		</a>
 			<div class="card-body">
    		<p class="card-text" id="indexCardText"><%= salon.detail.name %></p>
  		</div>
			</div>
  	</div>
    <% end %>
  </div>
</div>


<% end %>