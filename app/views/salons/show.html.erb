<div class="container text-dark">
	<!-- 	companys picture uploads -->
	<div class="row">
		<div class="card border-primary my-3 w-100" height="400">
			<% if @photos.blank? %>
				<%= link_to 'Upload photos', new_photo_path %>
			<% elsif %>
				<div id="demo" class="carousel slide mx-auto" data-ride="carousel">
					<ul class="carousel-indicators">
						<li data-target="#demo" data-slide-to="0" class="active"></li>
						<% @photos.each do |photo| %>
						<li data-target="#demo" data-slide-to="<%= photo.id  %>"></li>
						<% end %>
					</ul>
					<!-- The slideshow -->
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img src="<%= @photos.first.photo_url %>">
						</div>
						<% @photos.each do |photo| %>
						<div class="carousel-item">
							<img src="<%= photo.photo_url %>" class="img-fluid mr-auto" >
						</div>
						<% end %>
					</div>
					<!-- Left and right controls -->
					<a class="carousel-control-prev" href="#demo" data-slide="prev">
						<span class="carousel-control-prev-icon"></span>
					</a>
					<a class="carousel-control-next" href="#demo" data-slide="next">
						<span class="carousel-control-next-icon"></span>
					</a>
				</div>
			<% end %>
		</div>
	</div>
	<!-- 	companys basic bio info -->
	<div class="row">
		<div class="card border-primary my-3 w-100">
			<div class="col-lg">
				<div class="row justify-content-between">
					<div class="col-3">
						<div class="vertical-center">
							<img class="bg-info w-100" src='<%= @salon.detail.logo_url %>' alt='logo'>
						</div>
					</div>
					<div class="col">
						<p>Name: <%= @salon.detail.name %></p>
						<p>Phone: <%= @salon.detail.phone %></p>
						<p>Address: <%= @salon.detail.address %></p>
						<p>Area: <%= @salon.detail.area %></p>
						<p>Website: <%= @salon.detail.website %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- 	companys appointments & services -->
	<div class="row">
		<!-- 	companys appointments-->
		<div class="col-lg-6">
			<div class="card border-primary my-3 w-100">
				<div class="card-header d-flex">
					<h3 class="mr-auto">appointments</h3>
				</div>
				<div class="card-body">
					<ul class="list-group">
						<% if @appointments.blank? %>
							<li class="list-group-item d-flex justify-content-between align-items-center">
								No appointments currently
								<span class="badge badge-primary badge-pill">14</span>
							</li>
						<% elsif %>
							<% @salon.appointments.each do |a| %>
							<li class="list-group-item d-flex justify-content-between align-items-center">
								<%= a.name %>
								<span class="badge badge-primary badge-pill">14</span>
							</li>
							<% end %>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<!-- 	companys services -->
		<div class="col-lg-6">
			<div class="card border-primary my-3 w-100">
				<div class="card-header d-flex">
					<h3 class="mr-auto">services</h3>
					<%= link_to image_tag('plus.svg', :height => '20' ), new_service_path %>
				</div>
				<div class="card-body">
					<ul class="list-group">
						<% if @services.blank? %>
						<%= link_to 'Edit services', new_service_path %>
						<% elsif %>
							<% @salon.services.each do |s| %>
							<li class="list-group-item d-flex justify-content-between align-items-center">
								<%= s.name %>
								<span class="badge badge-primary badge-pill">$<%= s.price %></span>
							</li>
							<% end %>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>