<p>You searched: <%= @input %></p>
<% if @services.present? == true %>
	<p>Salons with the service <%= @services.first.name %>:</p>
	<div class="container">
	  <div class="row">
	  	<% @services.each do |svc| %>
	  	<div class="col-4">
	  		<a href ="/salons/<%=svc.salon.id%>/appointments" class="aTag">
	  		<div class="card">
	  			<div class ="cardImage">
	  				<img src= "<%=svc.salon.detail.logo_url%>" class="card-img-top cardImage" alt="...">
	  			</div>
	  			</a>
	 					<div class="card-body">
	    				<p class="card-text"><%= svc.salon.detail.name %></p>
	  				</div>
				</div>
	  	</div>
	    <% end %>
	  </div>
	</div>
<% else %>
	<p>Could not find salons that offer that service.</p>
<% end %>

<% if @details.present? == true %>
	<p>Salons in the area <%= @details.first.area %>:</p>
	<div class="container">
	  <div class="row">
	  	<% @details.each do |detail| %>
	  	<div class="col-4">
	  		<a href ="/salons/<%=detail.salon.id%>/appointments" class="aTag">
	  		<div class="card">
	  			<div class ="cardImage">
	  				<img src= "<%=detail.logo_url%>" class="card-img-top cardImage" alt="...">
	  			</div>
	  			</a>
	 					<div class="card-body">
	    				<p class="card-text"><%= detail.name %></p>
	  				</div>
				</div>
	  	</div>
	    <% end %>
	  </div>
	</div>
<% else %>
	<p>Could not find salons in that area.</p>
<% end %>