<div class ="searchHeader">Search Results with <%= @services.first.name %> </div>
<% if @services.present? %>
<!-- 	<p>Salons with the service: <%= @services.first.name %></p> -->
<div class="container">
	<div class="row">
	  <% @services.each do |svc| %>
	  <!-- each card -->
	  <div class="col-4">
	  	<div class="card" id="indexCard">
	  		<a href ="/salons/<%=svc.salon.id%>/appointments" class="aTag">
	  			<!-- card image component -->
	  			<div class ="cardImage">
	  				<img src= "<%=svc.salon.detail.logo_url%>" class="card-img-top cardImage" alt="...">
	  			</div>
	  		</a>
	  		<!-- card text -->
	 			<div class="card-body">
	    		<p class="card-text" id="indexCardText">
	    			<%= svc.salon.detail.name %>
	    		</p>
	  		</div>
			</div>
	  </div>
	  <% end %>
	 </div>
</div>

<% else %>
	<h1 class ="noResult">Sorry, could not find salons that offer that service.</h1>
<% end %>