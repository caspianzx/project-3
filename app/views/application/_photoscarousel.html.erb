<div class="card border-primary my-3 w-100" height="400">
	<% if @photos.blank? %>
		<%= link_to 'Upload photos', new_photo_path %>
	<% elsif %>

		<div id="demo" class="carousel slide mx-auto" data-ride="carousel">
			<ul class="carousel-indicators">
				<li data-target="#demo" data-slide-to="0" class="active"></li>
				<% @photos.each do |photo| %>
				<li data-target="#demo" data-slide-to="<%= photo.id  %>"></li>
				<% end %>
			</ul>
			<!-- The slideshow -->
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="<%= @photos.first.photo_url %>">
				</div>
				<% @photos.each do |photo| %>
					<div class="carousel-item">
						<img src="<%= photo.photo_url %>" class="img-fluid mr-auto" >
					</div>
				<% end %>
			</div>
			<!-- Left and right controls -->
			<a class="carousel-control-prev" href="#demo" data-slide="prev">
				<span class="carousel-control-prev-icon"></span>
			</a>
			<a class="carousel-control-next" href="#demo" data-slide="next">
				<span class="carousel-control-next-icon"></span>
			</a>
		</div>

	<% end %>
</div>