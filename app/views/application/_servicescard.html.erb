 	<div class="card border-primary my-3 w-100 h-100" id="appointmentDashboard">

		<div class="card-header d-flex">
			<h3 class="mr-auto">services</h3>
			<%= link_to image_tag('edit.svg', :height => '20' ), edit_service_path, :class => 'mx-2' %>

			<%= link_to image_tag('plus.svg', :height => '20' ), new_service_path, :class => 'mx-2'  %>
		</div>

		<div class="card-body">
			<ul class="list-group">
				<% if @services.blank? %>
					<%= link_to 'Add services', new_service_path %>
				<% elsif %>
					<% @salon.services.each do |s| %>
					<li class="list-group-item d-flex justify-content-between align-items-center adjustPadding">
						<p><%= s.name %> </p>
						<p>SGD <%= s.price %> </p>
					</li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>